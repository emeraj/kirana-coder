    // بيانات الإنجازات
    const achievements = [
      { id: 1, name: 'المستكشف الأول', description: 'استكشف قارة واحدة', points: 10, icon: '🌍' },
      { id: 2, name: 'الباحث الماهر', description: 'استخدم البحث 5 مرات', points: 15, icon: '🔍' },
      { id: 3, name: 'الطالب المجتهد', description: 'أجب عن 3 أسئلة صحيحة', points: 20, icon: '🎓' },
      { id: 4, name: 'المفضلة', description: 'أضف 3 بطاقات إلى المفضلة', points: 25, icon: '⭐' },
      { id: 5, name: 'الماجستير', description: 'احصل على 50 نقطة', points: 50, icon: '🏆' }
    ];

    // تهيئة المتغيرات
    let darkMode = localStorage.getItem('darkMode') === 'true';
    let points = parseInt(localStorage.getItem('points')) || 0;
    let searchCount = parseInt(localStorage.getItem('searchCount')) || 0;
    let correctAnswers = parseInt(localStorage.getItem('correctAnswers')) || 0;
    let favorites = JSON.parse(localStorage.getItem('favorites')) || [];
    let unlockedAchievements = JSON.parse(localStorage.getItem('unlockedAchievements')) || [];

    // عناصر DOM
    const darkModeToggle = document.getElementById('darkModeToggle');
    const searchInput = document.getElementById('searchInput');
    const countriesGrid = document.getElementById('countriesGrid');
    const pointsDisplay = document.getElementById('pointsValue');
    const achievementsPanel = document.getElementById('achievementsPanel');
    const achievementsList = document.getElementById('achievementsList');

    // تطبيق الوضع الليلي إذا كان مفعلاً
    if (darkMode) {
      document.body.classList.add('dark-mode');
      darkModeToggle.textContent = '☀️';
    }

    // تحديث عرض النقاط
    function updatePoints() {
      pointsDisplay.textContent = points;
      localStorage.setItem('points', points);
      checkAchievements();
    }

    // إضافة نقاط
    function addPoints(amount) {
      points += amount;
      updatePoints();
      showAchievementNotification(`حصلت على ${amount} نقاط!`);
      
      // تكامل مع App24
      if (typeof App24 !== 'undefined') {
        App24.addScore(amount);
      }
    }

    // عرض إشعار الإنجاز
    function showAchievementNotification(message) {
      const notification = document.createElement('div');
      notification.style.cssText = `
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        background: linear-gradient(45deg, #3498db, #8AB4F8);
        color: white;
        padding: 15px 25px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        z-index: 1000;
        font-weight: bold;
        animation: slideDown 0.3s ease-out;
      `;
      
      if (document.body.classList.contains('dark-mode')) {
        notification.style.background = 'linear-gradient(45deg, #34A853, #81C995)';
      }
      
      notification.textContent = message;
      document.body.appendChild(notification);
      
      setTimeout(() => {
        notification.remove();
      }, 3000);
    }

    // تحقق من الإنجازات
    function checkAchievements() {
      achievements.forEach(achievement => {
        if (unlockedAchievements.includes(achievement.id)) return;
        
        let unlocked = false;
        
        switch(achievement.id) {
          case 1:
            unlocked = true; // تم فتحه تلقائياً
            break;
          case 2:
            unlocked = searchCount >= 5;
            break;
          case 3:
            unlocked = correctAnswers >= 3;
            break;
          case 4:
            unlocked = favorites.length >= 3;
            break;
          case 5:
            unlocked = points >= 50;
            break;
        }
        
        if (unlocked) {
          unlockedAchievements.push(achievement.id);
          localStorage.setItem('unlockedAchievements', JSON.stringify(unlockedAchievements));
          showAchievementNotification(`🏆 إنجاز جديد: ${achievement.name}!`);
          addPoints(achievement.points);
          updateAchievementsPanel();
        }
      });
    }

    // تحديث لوحة الإنجازات
    function updateAchievementsPanel() {
      achievementsList.innerHTML = '';
      achievements.forEach(achievement => {
        const isUnlocked = unlockedAchievements.includes(achievement.id);
        const achievementElement = document.createElement('div');
        achievementElement.className = 'achievement-item';
        achievementElement.innerHTML = `
          <span class="achievement-icon">${isUnlocked ? achievement.icon : '🔒'}
          

            
${achievement.name}

            
${achievement.description}</div>
          </div>
        `;
        achievementsList.appendChild(achievementElement);
      });
    }

    // تبديل الوضع الليلي
    darkModeToggle.addEventListener('click', () => {
      document.body.classList.toggle('dark-mode');
      darkMode = !darkMode;
      localStorage.setItem('darkMode', darkMode);
      darkModeToggle.textContent = darkMode ? '☀️' : '🌙';
      updateAchievementsPanel();
    });

    // إنشاء بطاقات الدول
    function createCountryCards(countries = africanCountries) {
      countriesGrid.innerHTML = '';
      
      if (countries.length === 0) {
        const noResults = document.createElement('div');
        noResults.className = 'no-results';
        noResults.textContent = 'لا توجد نتائج تطابق بحثك';
        countriesGrid.appendChild(noResults);
        return;
      }
      
      countries.forEach(country => {
        const isFavorited = favorites.includes(country.id);
        const card = document.createElement('div');
        card.className = 'country-card';
        card.dataset.number = country.id;
        card.innerHTML = `
          <div class="country-header">
            <div class="country-flag">${country.flag}

            
${country.name}</div>
          </div>
          <div class="country-info">
            <div class="info-item">
              <span class="info-label">العاصمة:</span>
              <span class="info-value">${country.capital}
            

            

              السكان:
              ${country.population}</span>
            </div>
            <div class="info-item">
              <span class="info-label">العملة:</span>
              <span class="info-value">${country.currency || 'غير متوفر'}
            

          

          
${country.fact} </div> `; countriesGrid.appendChild(card); }); } // تصفية الدول حسب البحث searchInput.addEventListener('input', () => { const searchTerm = searchInput.value.trim().toLowerCase(); searchCount++; localStorage.setItem('searchCount', searchCount); checkAchievements(); if (searchTerm === '') { createCountryCards(); return; } const filteredCountries = africanCountries.filter(country => { return ( country.name.toLowerCase().includes(searchTerm) || country.capital.toLowerCase().includes(searchTerm) || country.population.toLowerCase().includes(searchTerm) || (country.currency && country.currency.toLowerCase().includes(searchTerm)) || country.fact.toLowerCase().includes(searchTerm) ); }); createCountryCards(filteredCountries); }); // تهيئة التطبيق function init() { createCountryCards(); updatePoints(); updateAchievementsPanel(); // إظهار لوحة الإنجازات مؤقتاً setTimeout(() => { achievementsPanel.classList.add('show'); setTimeout(() => { achievementsPanel.classList.remove('show'); }, 5000); }, 1000); // تكامل مع App24 if (typeof App24 !== 'undefined') { App24.ready(() => { console.log('App24 is ready'); }); } } // بدء التطبيق init(); </script> </body> </html>